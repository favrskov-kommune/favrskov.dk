<svg class="icon icon--{{ svgIconName }}">
  {% if iconPath %}
    <use xmlns:xlink="http://www.w3.org/1999/xlink" xlink:href="/{{ iconPath }}#{{ svgIconName }}"></use>
  {% else %}
    <use xmlns:xlink="http://www.w3.org/1999/xlink" xlink:href="/{{ directory }}/build-assets/dist/icons/icons.svg#{{ svgIconName }}"></use>
  {% endif %}
</svg>
