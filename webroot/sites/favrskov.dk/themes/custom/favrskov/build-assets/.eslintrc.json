{
  "extends": [
    "eslint:recommended",
    "airbnb-base"
  ],
  "globals": {
    "Drupal": true,
    "drupalSettings": true
  },
  "parserOptions": {
    "ecmaVersion": 6,
    "sourceType": "module"
  },
  "env": {
    "node": true,
    "browser": true,
    "es6": true
  },
  "rules": {
    "import/no-extraneous-dependencies": ["error", {"devDependencies": true}],
    "import/no-unresolved": "off",
    "no-unused-vars": 0,
    "no-param-reassign": [
      "error",
      {
        "props": true,
        "ignorePropertyModificationsFor": [
          "vue",
          "Drupal"
        ]
      }
    ]
  },
  "root": true
}
