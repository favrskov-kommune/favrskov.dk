{{ attach_library('favrskov/news-page') }}

<div{{ (not attributes ? create_attribute() : attributes).addClass('news-page') }}>
  <div class="section section--spacing-top-small section--spacing-bottom-none">
    <div class="container">
      <div class="row">
        <div class="col-xs-12 col-md-8 col-md-offset-2">
          {% if title %}
            <div class="news-page__title">
              <h1>{{ title }}</h1>
            </div>
          {% endif %}
          {% if display_publishing_date == 1 %}
            <div class="news-page__publishing-date">
              {{ pubdate|date('U')|format_date('news_date') }}
            </div>
          {% endif %}
        </div>
      </div>
    </div>
  </div>
  {% if content %}
    <div class="news-page__content">
      {{ content }}
    </div>
  {% endif %}
  <div class="section section--spacing-top-small section--spacing-bottom-medium">
    <div class="container">
      <div class="row">
        <div class="col-xs-12 col-md-8 col-md-offset-2">
          <div class="news-page__back-link js-hidden">
            {% include '@particles/svg-icon/svg-icon.twig' with {
              'attributes': '',
              'svgIconName': 'arrow-left'
            } %}
            <a href="#">{{ 'Back to list'|t }}</a>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
