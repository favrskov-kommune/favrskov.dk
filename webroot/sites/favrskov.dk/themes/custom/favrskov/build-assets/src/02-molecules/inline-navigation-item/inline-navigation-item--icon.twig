{{ attach_library('favrskov/inline-navigation-item') }}

<li {{ (not attributes ? create_attribute() : attributes ).addClass('inline-navigation-item','inline-navigation-item-icon') }}>
  <a href="{{ url }}" class="inline-navigation-item__link">
    <div class="inline-navigation-item__icon">
      {% if media is not empty %}
        {{ media }}
      {% else %}
        {% include '@particles/svg-icon/svg-icon.twig' with {
          'attributes': '',
          'svgIconName': 'no-image'
        } %}
      {% endif %}
    </div>
    <h2 class="inline-navigation-item__text">{{ label }}</h2>
  </a>
</li>
