{{ attach_library('favrskov/footer') }}

<footer class="footer">
  <div class="footer__top">

  </div>
  <div class="footer__background">
    <img src="{{ directory }}/build-assets/dist/images/favrskov-kommune-footer.svg" alt="Favrskov Kommune" />
  </div>
  <div{{ (not attributes ? create_attribute() : attributes).addClass(['footer__inner', 'section', 'theme', 'theme-primary']) }}>
    <div class="container">
      <div class="row">
        <div class="col-xs-12 col-ms-4 col-sm-4">
          <div class="footer__logo">
            <a title="Hjem" rel="home" href="/">
              <img class="logo__image" src="{{ directory }}/build-assets/dist/images/logo-neg.svg" alt="Favrskov" />
            </a>
          </div>
        </div>
        {% if cols|length > 0 %}
          {% for col in cols %}
            <div class="col-xs-12 col-ms-8 col-sm-4{{ loop.index == 2 ? ' col-ms-offset-4 col-sm-offset-0' }}">
              {% if col.headline %}
                <div class="footer__headline">{{ col.headline }}</div>
              {% endif %}
              <div class="footer__content">{{ col.content }}</div>
            </div>
          {% endfor %}
        {% endif %}
      </div>
    </div>
  </div>
</footer>
