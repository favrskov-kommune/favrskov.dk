{{ attach_library('favrskov/image-slideshow') }}

<div{{ (not attributes ? create_attribute() : attributes).addClass('image-slideshow-wrapper').addClass('js-image-slideshow-wrapper').setAttribute('data-autoplay', autoplay ? 'true' : 'false') }}>
  {% block block_content %}{% endblock %}
  <ul class="image-slideshow js-image-slideshow">
    {% for item in items %}
      <li class="image-slideshow-slide">
        {{ item.image }}
      </li>
    {% endfor %}
  </ul>
  <ul class="image-slideshow-navigation js-image-slideshow-navigation">
    {% for item in items %}
      <li class="image-slideshow-navigation__dot"></li>
    {% endfor %}
  </ul>
</div>
