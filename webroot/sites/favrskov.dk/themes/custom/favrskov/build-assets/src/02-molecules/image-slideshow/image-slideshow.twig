{{ attach_library('favrskov/image-slideshow') }}

<div{{(notattributes?create_attribute():attributes).addClass('image-slideshow-wrapper').addClass('js-image-slideshow-wrapper').setAttribute('data-autoplay',autoplay?'true':'false')}}>
	{% block block_content %}
	{% endblock %}
	<div class="image-slideshow js-image-slideshow">
		{% for item in items %}
			<div class="image-slideshow-slide">
				{{ item.image }}
			</div>
		{% endfor %}
	</div>
</div>
